<% include ../partial/header %>

    <div class="container-fluid" id="heading" >
        <header class="jumbotron" id="heading-box">
            <div class="container">
                <h1 id="heading_name">Welcome to YelpCamp!</h1>
                <p id="tagline">View our hand-picked campground from all over world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Camp</a>
                </p>
            </div>
            
        </header>
        <!-- <img src="mustafiz.jpg" alt="hkgkjhkj"> -->
        
        <div class="row text-center" id="display">
            <% camp.forEach(function(camp){ %>
                <div class="col-lg-6 col-md-12" >
                    <div class="thumbnail" id="item">
                        <h3 id="item-title"> <%= camp.name %> </h3>
                        <div class="caption" id="display-item">
                            <img src="<%= camp.image %> " alt=" <%= camp.name %>" width="350px" height="300px">
                        </div>
                        <div id="created">
                            <em>By <%= camp.author.username %></em>
                            <span> <%= camp.created.toDateString() %> </span>
                        </div>
                        <hr>
                        <div id="item-content">
                            <p> <%- camp.discription.substring(0,200) %>....  <a href="/campgrounds/<%= camp._id %>" class="btn btn-sm">More</a></p>
                        </div>
                    </div>
                </div>

            <% }); %>
        </div>
    </div>

<% include ../partial/footer %>