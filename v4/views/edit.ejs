<% include partial/header %>


    <div class="container">
        <div class="column">
            <h1 style="text-align: center">Create New CampGround</h1>

            <br>

            <div style="width: 50%; margin: 0 auto;">
                <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="">Name: </label>
                        <input class="form-control" type="text" value="<%= foundCamp.name %>" name="camp[name]" id="">
                    </div>
                    <div class="form-group">
                        <label for="">Image-URL: </label>
                        <input class="form-control" type="text" value="<%= foundCamp.image %>" name="camp[image]" id="">
                    </div>
                    <div class="form-group">
                        <label for="">Discription: </label>
                    <textarea class="form-control" name="camp[discription]" id="" rows="10"><%=foundCamp.discription %>
                    </textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg bt-default btn-block">Submit !</button>
                    </div>
                    
                    
                </form>
            </div>
            
            <br>

            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/<%= foundCamp._id %>">Back to <%= foundCamp.name %></a>
            </p>
        </div>
        
    </div>
 
    
    
    
<% include partial/footer %>

